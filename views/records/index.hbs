<h1>{{title}}</h1>

<br>

{{#if user}}
<a href="/records/add">Add a new Vinyl Record to your collection</a>
{{/if}}
<br>
<br>



<table class="table table-striped table-hover">
  <thead>
    <th>Album Title</th>
    <th>Album Artist</th>
    <th>Release Year</th>
    <th>No. of Songs</th>
  </thead>
  <tbody>
  {{#each dataset}}
    <tr>
      <td>{{this.albumTitle}}</td>
      <td>{{this.albumArtist}}</td>
      <td>{{this.releaseYear}}</td>
      <td>{{this.noOfSongs}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>