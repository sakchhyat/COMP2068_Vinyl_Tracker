<h1>{{title}}</h1>

<br>

{{#if user}}
<a href="/records/add">Add a new Vinyl Record to your collection</a>
{{/if}}
<br>
<br>



<table class="table table-striped table-hover">
  <thead>
    <th>Album Title</th>
    <th>Album Artist</th>
    <th>Release Year</th>
    <th>No. of Songs</th>
    
  </thead>
  <tbody>
  {{#each dataset}}
    <tr>
      <td>{{this.albumTitle}}</td>
      <td>{{this.albumArtist}}</td>
      <td>{{this.releaseYear}}</td>
      <td>{{this.noOfSongs}}</td>
      {{#if ../user}}
        <td><a href="/records/edit/{{this._id}}" 
          class="btn btn-primary">Edit</a>
            <a href="/records/delete/{{this._id}}" 
          class="btn btn-danger">Delete</a></td>
    {{/if}}
    </tr>
  {{/each}}
  </tbody>
</table>